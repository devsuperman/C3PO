@model Tarea

<div class="row">

    <div class="col-md-8 mb-2">
        <label asp-for="HombreClave"></label>
        <input class="form-control" asp-for="HombreClave" required>
        <span asp-validation-for='HombreClave' class='text-danger'></span>
    </div>

    <div class="col-md-4 mb-2">
        <label asp-for="Telefono"></label>
        <input class="form-control mask-phone" asp-for="Telefono" required>
        <span asp-validation-for='Telefono' class='text-danger'></span>
    </div>
</div>

<div class="mb-2">
    <label asp-for="Descripcion"></label>
    <textarea class="form-control" asp-for="Descripcion" required></textarea>
    <span asp-validation-for='Descripcion' class='text-danger'></span>
</div>

<div class='row'>

    <div class="mb-2 col-6">
        <label asp-for="Inicio"></label>
        <input class="form-control" asp-for="Inicio" required>
        <span asp-validation-for='Inicio' class='text-danger'></span>
    </div>

    <div class="mb-2 col-6">
        <label asp-for="Fim"></label>
        <input class="form-control" asp-for="Fim" required>
        <span asp-validation-for='Fim' class='text-danger'></span>
    </div>

</div>