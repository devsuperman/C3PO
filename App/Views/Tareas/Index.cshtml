@model List<Tarea>
@{  
    ViewData["Title"] = "Tareas";
}


<div class="d-flex">

    <h1 class='flex-grow-1'>
        <i class="bi bi-list-task"></i>
        @ViewData["Title"]
    </h1>

    <div>
        <a class="btn btn-primary" asp-action="Anadir">
            <i class="bi bi-plus"></i> AÃ±adir
        </a>    
    </div>

</div>
<hr>

<div class="list-group">
    @foreach (var item in Model)
    {
        <a class="list-group-item list-group-item-action d-flex" asp-action="Editar" asp-route-id="@item.Id">
            <span class='flex-grow-1'>
                @item.Responsable - @item.Titulo <br />
                <small class="text-muted"> De @item.Inicio.Date.ToShortDateString() a @item.Fim.Date.ToShortDateString()</small>
            </span>            
        </a>
    }
</div>